<button id="shareBtn">Share</button>
<script>
  document.getElementById('shareBtn').onclick = function () {
    if (navigator.share) {
      navigator.share({
        title: 'Test Share',
        text: 'Testing Web Share API',
        url: window.location.href
      })
      .then(() => alert('Share success!'))
      .catch(console.error);
    } else {
      alert('Web Share API not supported');
    }
  };
</script>
